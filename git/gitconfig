[user]
	email = midia.matheus@gmail.com
	name = Matheus Hernandes

[alias]
	p	= push
	po	= push origin
	pm 	= push origin master
	pd	= push origin dev
	a	= add -A
	c	= commit -m
	ca	= !git add -A && git commit -m
	b	= branch
	ck	= checkout
	cb	= checkout -b
	cbd	= checkout -b dev
	pl	= pull
	plo	= pull origin
	pld	= pull origin dev
	plm	= pull origin master
	st = stash
	sp = stash pop
	undo = reset HEAD~1
	f = fetch
	fo = fetch origin
	s = status
	die = reset --hard
  up = fetch origin && git pull
  rs = checkout master && git pull origin master
  rsh = checkout master && git pull origin master && git branch -D $(git branch | grep -v master)

[push]
	default = current

[core]
	excludefiles = /etc/gitignore_global
